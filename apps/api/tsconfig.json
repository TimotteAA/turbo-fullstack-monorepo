{
    "extends": "@timotte-app/ts-config/nest.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "esnext",
        "module": "Node16",
        "moduleResolution": "NodeNext",
        "types": ["bun-types"],
        "emitDecoratorMetadata": true
    },
    "include": ["src", "test", "typings/**/*.d.ts", "**.js", "typings", "./typings/**/*.d.ts"]
}
